generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  parent
  mentor
  campus_admin
  super_admin
}

enum TaskStatus {
  todo
  doing
  done
}

enum ReminderChannel {
  email
  sms
  push
}

enum ReminderStatus {
  pending
  sent
  error
}

enum DeadlineType {
  registration
  test
  oral
  result
  other
}

enum DocumentStatus {
  missing
  pending
  validated
}

enum CandidatureType {
  concours
  diplome
}

enum ProgramType {
  bachelor
  master
  msc
  mba
  emba
  specialized_msc
  executive_master
  certificate
  phd
  other
}

enum ProgramFormat {
  full_time
  part_time
  online
  hybrid
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  firstName    String
  lastName     String
  role         Role          @default(student)
  candidatures Candidature[]
  reminders    Reminder[]
  googleCredential GoogleCredential?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Contest {
  id           String        @id @default(cuid())
  name         String
  year         Int
  url          String?
  description  String?
  examFormat   String?
  feesCents    Int?
  currency     String        @default("EUR")
  contacts     String?
  deadlines    Deadline[]
  schools      School[]
  programs     Program[]
  candidatures Candidature[]
  createdAt    DateTime      @default(now())

  @@unique([name, year], map: "name_year")
}

model School {
  id           String        @id @default(cuid())
  name         String
  contest      Contest       @relation(fields: [contestId], references: [id], onDelete: Cascade)
  contestId    String
  description  String?
  website      String?
  city         String?
  country      String?
  campuses     String[]      @default([])
  contactEmail String?
  contactPhone String?
  tuitionCents Int?
  currency     String        @default("EUR")
  leaderboardEntries LeaderboardEntry[]
  programs     Program[]
  deadlines    Deadline[]
  candidatures Candidature[]
  createdAt    DateTime      @default(now())

  @@unique([name, contestId], map: "name_contestId")
}

model Program {
  id                     String           @id @default(cuid())
  slug                   String           @unique
  name                   String
  type                   ProgramType
  domain                 String
  description            String?
  objectives             String?
  outcomes               String[]         @default([])
  durationMonths         Int?
  ects                   Int?
  format                 ProgramFormat
  campuses               String[]         @default([])
  languages              String[]         @default([])
  startPeriods           String[]         @default([])
  tuitionCents           Int?
  applicationFeeCents    Int?
  currency               String           @default("EUR")
  financing              String?
  admissionPrerequisites String[]         @default([])
  admissionTests         String[]         @default([])
  admissionDocuments     String[]         @default([])
  admissionProcess       String?
  contactEmail           String?
  contactPhone           String?
  website                String?
  school                 School           @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  schoolId               String
  contest                Contest?         @relation(fields: [contestId], references: [id], onDelete: Cascade)
  contestId              String?
  courses                ProgramCourse[]
  careers                ProgramCareer[]
  leaderboardEntries    LeaderboardEntry[]
  deadlines              Deadline[]
  candidatures           Candidature[]
  createdAt              DateTime         @default(now())

  @@unique([name, schoolId], map: "program_name_school")
}

model ProgramCourse {
  id          String   @id @default(cuid())
  title       String
  category    String?
  description String?
  program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId   String
}

model ProgramCareer {
  id          String   @id @default(cuid())
  title       String
  description String?
  program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId   String
}

model Leaderboard {
  id          String             @id @default(cuid())
  slug        String             @unique
  name        String
  source      String
  category    String?
  region      String?
  year        Int
  url         String?
  description String?
  entries     LeaderboardEntry[]
  createdAt   DateTime           @default(now())
}

model LeaderboardEntry {
  id            String       @id @default(cuid())
  rank          Int
  score         Float?
  notes         String?
  school        School?      @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  schoolId      String?
  program       Program?     @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId     String?
  leaderboard   Leaderboard  @relation(fields: [leaderboardId], references: [id], onDelete: Cascade)
  leaderboardId String

  @@index([leaderboardId, rank])
}

model Deadline {
  id          String       @id @default(cuid())
  title       String
  type        DeadlineType
  dueAt       DateTime
  sessionLabel String      @default("Session unique")
  diplomaName String?
  contest     Contest      @relation(fields: [contestId], references: [id], onDelete: Cascade)
  contestId   String
  school      School?      @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  schoolId    String?
  program     Program?     @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId   String?
  createdByAdmin Boolean   @default(true)
  reminders   Reminder[]
  tasks       Task[]
  createdAt   DateTime     @default(now())

  @@unique([contestId, schoolId, programId, title], map: "contestId_schoolId_programId_title")
}

model Candidature {
  id         String    @id @default(cuid())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  contest    Contest   @relation(fields: [contestId], references: [id], onDelete: Cascade)
  contestId  String
  school     School?   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  schoolId   String?
  type       CandidatureType @default(concours)
  program    Program?  @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId  String?
  diplomaName String?
  sessionLabel String   @default("Session unique")
  status     String    @default("draft")
  tasks      Task[]
  documents  Document[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Task {
  id            String      @id @default(cuid())
  title         String
  status        TaskStatus
  candidature   Candidature @relation(fields: [candidatureId], references: [id], onDelete: Cascade)
  candidatureId String
  deadline      Deadline?   @relation(fields: [deadlineId], references: [id], onDelete: Cascade)
  deadlineId    String?
  tips          String?
  createdAt     DateTime    @default(now())
}

model Reminder {
  id         String          @id @default(cuid())
  deadline   Deadline        @relation(fields: [deadlineId], references: [id], onDelete: Cascade)
  deadlineId String
  channel    ReminderChannel
  sendAt     DateTime
  status     ReminderStatus  @default(pending)
  sentAt     DateTime?
  lastError  String?
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime        @default(now())

  @@unique([userId, deadlineId, channel, sendAt])
}

model GoogleCredential {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String   @unique
  calendarId   String?
  accessToken  String
  refreshToken String
  scope        String
  tokenType    String
  expiryDate   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Document {
  id            String       @id @default(cuid())
  name          String
  status        DocumentStatus @default(missing)
  candidature   Candidature  @relation(fields: [candidatureId], references: [id], onDelete: Cascade)
  candidatureId String
  createdAt     DateTime     @default(now())
}

